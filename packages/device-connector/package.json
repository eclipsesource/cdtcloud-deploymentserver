{
  "name": "device-connector",
  "version": "1.0.0",
  "main": "src/index.ts",
  "description": "Device-Connector for the cdtcloud-deploymentserver service",
  "homepage": "https://github.com/eclipsesource/cdtcloud-deploymentserver/tree/main/packages/device-connector",
  "repository": "git@github.com:EclipseSource/cdtcloud-deploymentserver.git",
  "license": "EPL-2.0",
  "bugs": {
    "url": "https://github.com/EclipseSource/cdtcloud-deploymentserver/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "nodemon -x node --loader esbuild-node-loader --no-warnings -r dotenv/config src/index.ts dotenv_config_path=.env.dev",
    "start": "node --loader esbuild-node-loader --no-warnings -r dotenv/config src/index.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "tap",
    "test:dev": "tap -w",
    "typecheck": "tsc -noEmit",
    "prepare": "yarn tsc"
  },
  "tap": {
    "node-arg": [
      "--no-warnings",
      "--loader=esbuild-node-loader"
    ],
    "no-coverage-report": true,
    "test-env": [
      "NODE_ENV=test",
      "SERVER_URI=localhost:3001",
      "LOG_LEVEL=fatal"
    ],
    "files": [
      "test/**/*.spec.ts"
    ]
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.5.0",
    "@grpc/proto-loader": "^0.6.7",
    "close-with-grace": "^1.1.0",
    "dotenv": "^10.0.0",
    "esbuild-node-loader": "^0.6.3",
    "google-protobuf": "^3.19.1",
    "pino": "^7.6.2",
    "pino-pretty": "^7.3.0",
    "undici": "^4.10.1",
    "wait-on": "^6.0.0",
    "ws": "^8.3.0"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.5",
    "@types/node": "^16.11.7",
    "@types/tap": "^15.0.5",
    "@types/wait-on": "^5.3.1",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "nodemon": "^2.0.15",
    "tap": "^15.1.1",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=16.5.0"
  }
}
